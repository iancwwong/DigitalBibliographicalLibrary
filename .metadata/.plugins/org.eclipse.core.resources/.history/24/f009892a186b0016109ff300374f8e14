/*
 * This class represents the model that will be used in the index page
 */
package edu.unsw.comp9321;

import java.util.*;

public class IndexBean {
	public List<SimplePublicationBean> publications = new ArrayList<PublicationBean>();
	public List<SimplePublicationBean> getPublications() { return this.publications; }
	
	// HELPER CLASS
	public class SimplePublicationBean {
		public String id = "";
		public String title = "";
		public List<String> authors = new ArrayList<String>();
		
		public String getId() { return this.id; }
		public String getTitle() { return this.title; }
		public List<String> getAuthors() { return this.authors; }
		
	}
}
