/*
 * This is a helper class that summarises the details of a particular publication
 */
package edu.unsw.comp9321;

import java.util.ArrayList;
import java.util.List;

public class SimplePublicationBean {
	public String id = "";
	public String type = "";
	public String title = "";
	public List<String> authors = new ArrayList<String>();
	public String formattedAuthors = "";
	
	public SimplePublicationBean() {
		this.formattedAuthors = "";
		for (String author : this.authors) {
			this.formattedAuthors += author + "; ";
		}
	}
	
	public String getId() { return this.id; }
	public String getType() { return this.type; }
	public String getTitle() { return this.title; }
	public List<String> getAuthors() { return this.authors; }
	public String getFormattedAuthors() { return this.formattedAuthors;	}
		
}
