/*
 * This class represents the model that will be used in the index page
 */
package edu.unsw.comp9321;

import java.util.*;

public class IndexBean {
	public List<SimplePublicationBean> publications = new ArrayList<SimplePublicationBean>();
	
	// CONSTRUCTOR
	public IndexBean(List<Publication> publications) {
		for (Publication publication : publications) {
			SimplePublicationBean spb = new SimplePublicationBean();
			spb.id = publication.id;
			spb.type = publication.type;
			spb.title = publication.title;
			spb.authors = publication.authors;
		}
	}
	
	public List<SimplePublicationBean> getPublications() { return this.publications; }
	
	

}
